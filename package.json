{
  "name": "lux-frontend",
  "version": "1.0.0",
  "description": "This is a frontend project that simulates a potential real-life designer hand-off that is given to a software engineer to implement.",
  "repository": "https://github.com/israelias/lux-frontend",
  "author": "Joem Elias Sanez",
  "private": true,
  "scripts": {
    "dev": "yarn codegen && next",
    "build": "yarn codegen && next build",
    "start": "next start",
    "codegen": "graphql-codegen --config codegen.yml && prettier --write @types/* lib/* ",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.graphql . --color",
    "format": "prettier --write './**/*.{ts,tsx,scss,css,json,graphql}'"
  },
  "dependencies": {
    "@apollo/client": "^3.4.10",
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.7",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@nivo/core": "^0.73.0",
    "@nivo/radar": "^0.73.0",
    "cross-fetch": "^3.1.4",
    "framer-motion": "^4",
    "graphql": "^15.5.2",
    "graphql-codegen-apollo-next-ssr": "^1.7.0",
    "next": "latest",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.32.1",
    "swr": "^1.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/import-types-preset": "^2.1.3",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/plugin-helpers": "^2.1.1",
    "@graphql-codegen/typescript": "^2.2.0",
    "@graphql-codegen/typescript-operations": "^2.1.3",
    "@graphql-codegen/typescript-react-apollo": "^3.1.3",
    "@graphql-codegen/typescript-resolvers": "^2.2.0",
    "@types/node": "^12.12.21",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "graphql-let": "^0.18.4",
    "graphql-tag": "^2.12.5",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "typescript": "4.0",
    "yaml-loader": "^0.6.0"
  }
}
